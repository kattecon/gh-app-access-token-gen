{
    "name": "gh-app-access-token-gen",
    "type": "module",
    "dependencies": {
        "@actions/core": "1.11.1",
        "@actions/github": "6.0.1",
        "@octokit/auth-app": "8.0.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "8.38.0",
        "@typescript-eslint/parser": "8.38.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-import-resolver-typescript": "4.4.4",
        "eslint-plugin-import": "2.32.0",
        "@types/node": "24.2.1",
        "eslint": "9.32.0",
        "esbuild": "0.25.9",
        "husky": "9.1.7",
        "prettier": "3.6.2",
        "lint-staged": "16.1.5",
        "typescript": "5.8.3",
        "typescript-eslint": "8.39.0"
    },
    "scripts": {
        "prepare": "husky",
        "build": "npm run build-common -- --outfile=dist/index.mjs",
        "build-watch": "npm run build-common -- --watch --outfile=temp/build.js",
        "build-common": "esbuild src/index.ts --banner:js='import { createRequire } from \"node:module\";const require = createRequire(import.meta.url);' --platform=node --format=esm --target=es2023 --bundle",
        "lint": "tsc && eslint src --max-warnings 0 --report-unused-disable-directives && prettier --check 'src/**/*.ts'"
    },
    "lint-staged": {
        "*": "prettier --write"
    }
}
